<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<p>
  <b>Author:</b>
  <%= @post.author.name %>
</p>

<% if PiccoBlog.include_comments == :active_record %>
  <hr />

  <h3>Comments</h3>
  <%= render @post.comments %>

  <%= render "picco_blog/comments/form" %>
<% end -%>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
